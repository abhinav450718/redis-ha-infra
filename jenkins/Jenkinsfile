pipeline {
  agent any

  environment {
    TF_DIR = "terraform"
    ANSIBLE_DIR = "ansible"
  }

  stages {
    stage('Terraform Apply') {
      steps {
        dir("${TF_DIR}") {
          sh 'terraform init'
          sh 'terraform apply -auto-approve'
          sh 'terraform output -raw ansible_inventory > ../ansible/inventory/hosts.json'
        }
      }
    }

    stage('Install Redis') {
      steps {
        dir("${ANSIBLE_DIR}") {
          sh 'ansible-galaxy install -r requirements.yml --force'
          sh 'ansible-playbook -i inventory/hosts.json playbook.yml'
        }
      }
    }

    stage('Test Redis') {
      steps {
        dir("${ANSIBLE_DIR}") {
          sh 'ansible -i inventory/hosts.json redis_master -m shell -a "redis-cli ping"'
          sh 'ansible -i inventory/hosts.json redis_replica -m shell -a "redis-cli ping"'
        }
      }
    }
  }
}
